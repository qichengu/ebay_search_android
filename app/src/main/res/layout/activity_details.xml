                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content">

                                <TableRow
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent">
                                    <TextView
                                        android:layout_width="100pt"
                                        android:layout_height="wrap_content"
