                    android:maxWidth="300dp"

                    android:layout_height="200dp"
                    android:layout_width="320dp"
                    android:layout_gravity="center_horizontal"


                     />
           <!--     </LinearLayout>   -->
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lg Google Nexus 5 D820 Black 16GB Unlocked Android Smartphone"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textSize="20sp"
                    android:textColor="#000000"

                    android:ellipsize="none"
                    android:maxLines="100"
android:layout_marginRight="10dp"


                    android:id="@+id/item_title" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price+Shipping"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textSize="10sp"
                    android:textColor="#787878"
                    android:id="@+id/item_price_shipping" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"

                    android:typeface="monospace"
                    android:textColor="#787878"
                    android:id="@+id/location"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:id="@+id/top_rated"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/itemtoprated"
                            android:visibility="invisible"
                            android:layout_marginRight="50dp" />


                        <Button
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="Buy Now"
                            android:id="@+id/buy_button"
                            android:onClick="buy_now"

                            android:background="@drawable/send_button" />


                    <!--<com.facebook.share.widget.ShareButton
                        android:id="@+id/fb_share_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:onClick="lets_share" />
                        -->


                        <ImageButton
                            android:layout_width="40dp"
                            android:layout_height="match_parent"

                            android:id="@+id/fb_share_button"
                            android:onClick="lets_share"
                            android:layout_gravity="right"
                            android:layout_marginLeft="40dp"
                            android:background="@drawable/fb" />

                </LinearLayout>


            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
