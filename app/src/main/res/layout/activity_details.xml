                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="title"
                                        android:id="@+id/buying_format"/>
                                </TableRow>

                            </TableLayout>
                            </RelativeLayout>
                        <RelativeLayout
